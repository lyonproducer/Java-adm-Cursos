    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/cursos?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">leo123</property>
    <mapping resource="Modelo/Instructor.hbm.xml"/>
    <mapping resource="Modelo/Curso.hbm.xml"/>
    <mapping resource="Modelo/Admin.hbm.xml"/>
    <mapping resource="Modelo/Alumno.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
